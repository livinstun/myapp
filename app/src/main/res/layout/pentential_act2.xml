<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="പരോ​ഹി​തൻ അനു​താ​പ​കർമ​ത്തി​ലേക്ക് വിശ്വാ​സി​കളെ ക്ഷണി​ക്കുന്നു:"
        style="@style/mass_comments" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="സഹോ​ദ​ര​രേ, ദിവ്യ​ര​ഹസ്യങ്ങൾ കൊണ്ടാ​ടു​ന്ന​തി​നു നാം യോഗ്യരാകേ​ണ്ട​തിന് നമ്മുടെ പാപ​ങ്ങൾ ഏറ്റു​പ​റ​യാം."
        style="@style/mass_priest" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="അല്പ​നി​മിഷം മൗനംപാലി​ക്കു​ന്നു. \nതടർന്ന് പുരോ​ഹി​തൻ ചൊല്ലുന്നു:"
        style="@style/mass_comments" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=" പരോഹിതന്‍:"
        style="@style/mass_comments" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="കർത്താ​വേ, ഞങ്ങ​ളിൽ കനി​യ​ണമേ."
        style="@style/mass_priest" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="ജനം: "
        style="@style/mass_comments" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="എന്തെ​ന്നാൽ, അങ്ങേ​ക്കെ​തി​രായി ഞങ്ങൾ പാപംചെയ്തുപോയി."
        style="@style/mass_people" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=" പരോഹിതന്‍:"
        style="@style/mass_comments" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="കർത്താ​വേ, അങ്ങേ കാരുണ്യം ഞങ്ങൾക്കു കാണിച്ചുതരണ​മേ."
        style="@style/mass_priest" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="ജനം: "
        style="@style/mass_comments" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="അങ്ങേ രക്ഷ ഞങ്ങൾക്കു നല്കുകയും ചെയ്യണമേ."
        style="@style/mass_people" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="പരോ​ഹി​തന്റെ പാപ​മോ​ചനപ്രാർഥന തുടർന്നുവ​രുന്നു: "
        style="@style/mass_comments" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="സർവ​ശ​ക്ത​നായ ദൈവം കനി​ഞ്ഞ്, നമ്മുടെ പാപ​ങ്ങൾ പൊറു​ത്ത്, നമ്മെ നിത്യ​ജീ​വി​ത​ത്തി​ലേക്കു നയിക്കുമാറാകട്ടെ."
        style="@style/mass_priest" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="ജനം: "
        style="@style/mass_comments" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=" ആമേന്‍."
        style="@style/mass_people" />
</LinearLayout>